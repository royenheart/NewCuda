{
    "configurations": [
        {
            "name": "cuda nvcc unit tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/unitTests/out/${fileBasenameNoExtension}.exe", // 运行已经编译好的文件
            "args": [
                "/C",
                "${workspaceFolder}/unitTests/out/${fileBasenameNoExtension}.exe",
                "&",
                "pause"
            ], // 运行参数设置
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/unitTests/out", // 运行目标的工作目录
            "preLaunchTask": "BuildWithNVCC unit tests", // 运行可执行文件前先执行编译
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "cuda nvcc unit tests without log",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/unitTests/out/${fileBasenameNoExtension}.exe", // 运行已经编译好的文件
            "args": [
                "/C",
                "${workspaceFolder}/unitTests/out/${fileBasenameNoExtension}.exe",
                "&",
                "pause"
            ], // 运行参数设置
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/unitTests/out", // 运行目标的工作目录
            "preLaunchTask": "BuildWithNVCC unit tests without log", // 运行可执行文件前先执行编译
            "environment": [],
            "console": "integratedTerminal"
        },
        {  
            "name": "c++(gdb) LaunchWithThread unit tests",  
            "type": "cppdbg",      
            "request": "launch",
            "program": "${workspaceFolder}/unitTests/out/${fileBasenameNoExtension}.exe",
            "args": [
                "/C",
                "${workspaceFolder}/unitTests/out/${fileBasenameNoExtension}.exe",
                "&",
                "pause"
            ],
            "stopAtEntry": false, 
            "cwd": "${workspaceFolder}/unitTests/out", // 调试程序时的工作目录，一般为${workspaceRoot}即代码所在目录  
            "environment": [],
            "MIMode": "gdb",  
            // 替换至对应目录
            "miDebuggerPath": "D:\\mingw\\mingw64\\bin\\gdb.exe", // miDebugger的路径，注意这里要与MinGw的路径对应  
            "preLaunchTask": "BuildWithG++ unit tests", // 调试会话开始前执行的任务，一般为编译程序，c++为g++, c为gcc  
            "setupCommands": [  
                {   
					"description": "Enable pretty-printing for gdb",  
                    "text": "-enable-pretty-printing",  
                    "ignoreFailures": true  
                }  
            ]  
        }  
    ]
}