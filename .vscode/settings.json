{
    "editor.fontSize": 17,
    "editor.fontWeight": "bold",
    "files.autoSave": "onFocusChange",
    "workbench.colorTheme": "Default Light+",
    // 设置vscode背景图片样式，需安装对应插件
    "background.enabled": true,
    "background.useDefault": false,
    "background.customImages": [
        "file:///D:/Background/wendy.png"
    ],
    "background.style": {
        "content": "''",
        "pointer-events": "none",
        "position": "absolute",
        "z-index": "1000",
        "width": "100%",
        "height": "100%",
        "background-position": "50% 30%",
        "background-repeat": "no-repeat",
        "opacity": 0.2,
    },
    "C_Cpp.errorSquiggles": "Enabled",
    // 文件与语言关联
    "files.associations": {
        "*.cu": "cuda-cpp",
        "*.h": "cuda-cpp",
        "xstring": "cpp",
        "string": "cpp",
        "iosfwd": "cpp",
        "charconv": "cpp",
        "chrono": "cpp",
        "format": "cpp",
        "memory": "cpp",
        "xlocale": "cpp",
        "locale": "cpp",
        "utility": "cpp"
    },
    // 自动配置cmake项目
    "cmake.configureOnOpen": false
}